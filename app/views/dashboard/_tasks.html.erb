<% if tasks.any? %>
  <% tasks.each do |task| %>
    <div id="<%= dom_id(task) %>" class="hover:bg-gray-50 transition-colors duration-150">
      <div class="p-4 sm:px-6">
        <div class="flex items-center justify-between">
          <div class="min-w-0 flex-1">
            <h3 class="text-base font-medium text-gray-900 truncate">
              <%= link_to task.title, task, class: "hover:text-indigo-600 focus:outline-none" %>
            </h3>
            <div class="mt-1 flex flex-wrap items-center gap-2">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                <%= task.state == 'active' ? 'bg-green-100 text-green-800' : 
                   task.state == 'paused' ? 'bg-yellow-100 text-yellow-800' : 
                   task.state == 'completed' ? 'bg-blue-100 text-blue-800' : 
                   task.state == 'waiting_on_human' ? 'bg-purple-100 text-purple-800' : 
                   'bg-gray-100 text-gray-800' %>">
                <%= task.state.humanize %>
              </span>
              
              <% if task.project %>
                <span class="inline-flex items-center text-xs text-gray-500">
                  <svg class="mr-1 h-3 w-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                  </svg>
                  <%= link_to task.project.name, project_path(task.project), class: "hover:text-indigo-600" %>
                </span>
              <% end %>
              
              <span class="inline-flex items-center text-xs text-gray-500">
                <svg class="mr-1 h-3 w-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
                <%= task.task_type.humanize %>
              </span>
              
              <% if task.agent_activities.any? %>
                <span class="inline-flex items-center text-xs text-gray-500">
                  <svg class="mr-1 h-3 w-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                  <%= pluralize(task.agent_activities.count, 'activity') %>
                </span>
              <% end %>
            </div>
          </div>
          
          <div class="ml-4 flex-shrink-0 flex">
            <% if task.pending? %>
              <%= button_to activate_task_path(task), method: :post, form: { data: { turbo: true } }, class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
                Start
              <% end %>
            <% elsif task.active? %>
              <%= button_to pause_task_path(task), method: :post, form: { data: { turbo: true } }, class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500" do %>
                Pause
              <% end %>
            <% elsif task.paused? %>
              <%= button_to resume_task_path(task), method: :post, form: { data: { turbo: true } }, class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
                Resume
              <% end %>
            <% end %>
          </div>
        </div>
        
        <% if task.description.present? %>
          <p class="mt-2 text-sm text-gray-600 line-clamp-2"><%= task.description %></p>
        <% end %>
        
        <div class="mt-2 text-xs text-gray-500">
          Created <%= time_ago_in_words(task.created_at) %> ago
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="p-6 text-center">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900">No active tasks</h3>
    <p class="mt-1 text-sm text-gray-500">Tasks will appear here when projects are running.</p>
  </div>
<% end %>
